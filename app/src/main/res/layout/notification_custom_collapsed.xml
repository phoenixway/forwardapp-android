<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/notification_card_bg">

    <View
        android:id="@+id/notification_accent"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/notification_accent_bar" />

    <TextView
        android:id="@+id/notification_emoji"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="\uD83C\uDF1F"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_emoji"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#F8FAFC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2" />

        <TextView
            android:id="@+id/notification_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textColor="#CBD5E1"
            android:textSize="13sp"
            android:maxLines="2" />
    </LinearLayout>

</RelativeLayout>
