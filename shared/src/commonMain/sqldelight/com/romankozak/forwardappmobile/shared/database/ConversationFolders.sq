import kotlin.Long;

CREATE TABLE ConversationFolders (
    id INTEGER AS kotlin.Long NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL
);

selectAll:
SELECT * FROM ConversationFolders ORDER BY name;

insert:
INSERT INTO ConversationFolders(name) VALUES (:name);

updateName:
UPDATE ConversationFolders SET name = :name WHERE id = :id;

deleteById:
DELETE FROM ConversationFolders WHERE id = :id;
