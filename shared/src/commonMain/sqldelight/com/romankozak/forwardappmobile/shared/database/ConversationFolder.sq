CREATE TABLE conversation_folders (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL
);

-- Get all conversation folders
selectAll:
SELECT * FROM conversation_folders ORDER BY name;

-- Insert a new folder
insert:
INSERT INTO conversation_folders(name) VALUES (?);

-- Update a folder's name
updateName:
UPDATE conversation_folders SET name = :name WHERE id = :id;

-- Delete a folder by its ID
deleteById:
DELETE FROM conversation_folders WHERE id = :id;
