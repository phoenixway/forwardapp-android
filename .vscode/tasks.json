{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle AssembleDebug",
      "type": "shell",
      "command": "./gradlew :app:assembleDebug",
      "group": "build",
      "problemMatcher": [
        {
          "owner": "kotlin",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(.*\\.kt):\\((\\d+),(\\d+)\\): (error|warning): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },

 {
      "label": "Assemble & Install Debug APK",
      "type": "shell",
      "command": "./gradlew :app:assembleDebug && adb -s e57073c4 install -r app/build/outputs/apk/debug/app-arm64-v8a-debug.apk && adb shell am start -n com.romankozak.forwardappmobile.debug/com.romankozak.forwardappmobile.MainActivity",
      "group": "build",
      "problemMatcher": [
        {
          "owner": "kotlin",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(.*\\.kt):\\((\\d+),(\\d+)\\): (error|warning): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Assemble & Install Release APK",
      "type": "shell",
      "command": "./gradlew :app:assembleRelease && mv app/build/outputs/apk/release/app-arm64-v8a-release.apk /home/share/ && sudo restorecon -Rv /home/share && adb -s e57073c4 install -r /home/share/app-arm64-v8a-release.apk",
      "group": "build",
      "problemMatcher": [
        {
          "owner": "kotlin",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(.*\\.kt):\\((\\d+),(\\d+)\\): (error|warning): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }


  ]
}
